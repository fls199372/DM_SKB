<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"

    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="64px"
        android:background="@drawable/bg2"
        android:orientation="vertical">
        <TextView
            android:id="@+id/register_main"
            android:layout_width="70px"
            android:layout_height="37px"
            android:layout_marginLeft="340px"
            android:textSize="35px"
            android:textColor="@color/white"
            android:layout_marginTop="27px"
            android:text="@string/register1" />
    </LinearLayout>
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="426px"
        android:background="@drawable/bg3"
        android:orientation="vertical"
        >
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="196px"
            android:layout_height="196px"
            android:layout_gravity="center"
            android:background="@drawable/circular_imageview"
            android:layout_marginTop="88px">
            <ImageView
                android:layout_marginTop="30px"
                android:layout_marginLeft="30px"
                android:id="@+id/logo"
                android:background="@drawable/icon"
                android:layout_width="132px"
                android:layout_height="133px" />
        </com.zhy.autolayout.AutoLinearLayout>
        <TextView
            android:layout_width="392px"
            android:layout_height="87px"
            android:textSize="85px"
            android:layout_marginLeft="197px"
            android:layout_marginTop="17px"
            android:text="@string/dm_skb"/>
    </com.zhy.autolayout.AutoLinearLayout>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="130px"
        android:hint="@string/phone_text"
        android:textColorHint="@color/black"
        android:drawablePadding="8dp"
        android:paddingLeft="39px"
        android:background="@drawable/shape"
        android:textColor="@color/black"
        android:inputType="number"
        android:maxLength="11"
        android:id="@+id/phone"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/black"
        android:orientation="vertical"
        ></LinearLayout>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="130px"
        android:hint="推荐人手机号码(选填)"
        android:textColorHint="@color/black"
        android:drawablePadding="8dp"
        android:paddingLeft="39px"
        android:background="@drawable/shape"
        android:textColor="@color/black"
        android:inputType="number"
        android:maxLength="11"
        android:id="@+id/recommend"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/black"
        android:orientation="vertical"
        ></LinearLayout>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="130px"
        android:hint="@string/password"
        android:inputType="textPassword"
        android:textColor="@color/black"
        android:background="@drawable/shape"
        android:textColorHint="@color/black"
        android:maxLength="15"
        android:paddingLeft="39px"
        android:id="@+id/Password"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/black"
        android:orientation="vertical"
        ></LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        >
        <EditText
            android:layout_width="560px"
            android:layout_height="130px"
            android:hint="@string/Verification_Code_text"
            android:inputType="number"
            android:textColor="@color/black"
            android:background="@drawable/shape"
            android:textColorHint="@color/black"
            android:maxLength="15"

            android:paddingLeft="39px"
            android:id="@+id/Verification_Code"/>
        <Button
            android:layout_width="160px"
            android:id="@+id/Get_verification_code"
            android:text="@string/Get_verification_code"
            android:background="@drawable/btn4"
            android:onClick="onClickAuth"
            android:layout_marginRight="30px"
            android:textSize="24px"
            android:textColor="@color/white"
            android:layout_height="64px"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/black"
        android:orientation="vertical"
        ></LinearLayout>
    <Button
        android:id="@+id/register_ok"
        android:layout_width="match_parent"
        android:onClick="onClickAuth"
        android:layout_marginTop="44px"
        android:background="@drawable/btn5"
        android:layout_marginLeft="30px"
        android:textColor="@color/white"
        android:layout_marginRight="30px"
        android:layout_height="90px"
        android:text="@string/register1" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginTop="36px"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="140px"
            android:layout_height="27px"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/black"
            android:gravity="center_vertical|right"
            android:layout_marginLeft="261px"
            android:textSize="25px"
            android:text="@string/has" />
    <TextView
        android:layout_width="80px"
        android:layout_height="27px"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/blue"
        android:id="@+id/to_log_on"
        android:onClick="onClickAuth"

        android:layout_marginLeft="8px"
        android:textSize="25px"
        android:text="@string/to_log_on" />
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginTop="36px"
        android:orientation="horizontal"
        >
        <CheckBox
            android:layout_width="60px"
            android:layout_height="37px"
            android:id="@+id/cb_st"
            android:layout_marginLeft="201px"
            android:checked="true"/>
        <TextView
            android:layout_width="160px"
            android:layout_height="27px"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/black"
            android:gravity="center_vertical|right"
            android:textSize="25px"
            android:text="我同意并已阅读" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="27px"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/blue"
            android:id="@+id/agreement"
            android:onClick="onClickAuth"

            android:layout_marginLeft="8px"
            android:textSize="25px"
            android:text="《鼎搜客服务协议》" />
        </LinearLayout>

</LinearLayout>
