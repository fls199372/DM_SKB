<com.zhy.autolayout.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/CustomDialog"
    android:background="#61000000"
    android:orientation="vertical"
    >
    
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/shape_5">
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="88px"
            android:background="#11b42d">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="36px"
                android:textSize="34px"
                android:gravity="center"
                android:layout_marginTop="26px"
                android:textColor="#ffffff"
                android:text="请添加邮箱及地址信息"/>
        </com.zhy.autolayout.AutoLinearLayout>
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="130px"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="50px"
                android:layout_height="50px"
                android:layout_marginLeft="35px"
                android:layout_marginTop="51px"
                android:background="@drawable/eml"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="28px"
                android:textColor="#1d1d26"
                android:background="@drawable/shape"
                android:hint="联系人邮箱"
                android:layout_marginLeft="50px"
                android:layout_marginTop="60px"
                android:textColorHint="#1d1d26"
                android:textSize="26px"
                android:id="@+id/mailbox"/>
        </com.zhy.autolayout.AutoLinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="4px"
            android:layout_marginLeft="34px"
            android:layout_marginRight="34px"
            android:background="#301d1d26"/>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="130px"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="50px"
                android:layout_height="50px"
                android:layout_marginLeft="35px"
                android:layout_marginTop="51px"
                android:background="@drawable/map3"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="28px"
                android:textColor="#1d1d26"
                android:background="@drawable/shape"
                android:hint="公司地址"

                android:layout_marginLeft="50px"
                android:layout_marginTop="60px"
                android:textColorHint="#1d1d26"
                android:textSize="26px"
                android:id="@+id/address"/>
        </com.zhy.autolayout.AutoLinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="4px"
            android:layout_marginLeft="34px"
            android:layout_marginRight="34px"
            android:background="#301d1d26"/>
        <Button
            android:id="@+id/submit"
            android:layout_width="360px"
            android:layout_marginTop="39px"
            android:background="@drawable/shape_45"
            android:layout_marginLeft="150px"
            android:textColor="@color/white"
            android:layout_height="64px"
            android:text="确认添加" />
    </com.zhy.autolayout.AutoLinearLayout>

      

</com.zhy.autolayout.AutoLinearLayout>
