<com.zhy.autolayout.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"

    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="96px"
        android:background="@drawable/bg2"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:onClick="onClickAuth"
            android:id="@+id/Return"
            >
            <ImageView
                android:layout_width="18px"
                android:layout_height="35px"
                android:layout_marginLeft="30px"
                android:layout_marginTop="30px"
                android:background="@drawable/arrow_left_icon"/>
            <TextView
                android:layout_width="70px"
                android:layout_height="37px"
                android:layout_marginTop="27px"
                android:textSize="35px"
                android:textColor="@color/white"
                android:layout_marginLeft="13px"
                android:text="@string/Return"/>
        </LinearLayout>
        <TextView
            android:id="@+id/register_main"
            android:layout_width="136px"
            android:layout_height="37px"
            android:layout_marginLeft="176px"
            android:textSize="35px"
            android:textColor="@color/white"
            android:layout_marginTop="27px"
            android:text="@string/XGMM" />
    </LinearLayout>
    <EditText
        android:layout_width="690px"
        android:layout_height="80px"
        android:layout_marginLeft="30px"
        android:layout_marginTop="39px"
        android:textColor="#000000"
        android:textColorHint="#000000"
        android:paddingLeft="40px"
        android:background="@drawable/shape_password"
        android:hint="@string/old_password"
        android:textSize="28px"
        android:id="@+id/old_password"
        />

    <EditText
        android:layout_width="690px"
        android:layout_height="80px"
        android:layout_marginLeft="30px"
        android:layout_marginTop="30px"
        android:textColor="#000000"
        android:textColorHint="#000000"
        android:paddingLeft="40px"
        android:background="@drawable/shape_password"
        android:hint="@string/new_password"
        android:textSize="28px"
        android:id="@+id/new_password"
        />

    <EditText
        android:layout_width="690px"
        android:layout_height="80px"
        android:layout_marginLeft="30px"
        android:layout_marginTop="30px"
        android:textColor="#000000"
        android:textColorHint="#000000"
        android:paddingLeft="40px"
        android:background="@drawable/shape_password"
        android:hint="@string/new_password1"
        android:textSize="28px"
        android:id="@+id/new_password1"
        />

    <Button
        android:id="@+id/confirm"
        android:layout_width="match_parent"
        android:onClick="onClickAuth"
        android:layout_marginTop="44px"
        android:background="@drawable/btn5"
        android:layout_marginLeft="30px"
        android:textColor="@color/white"
        android:layout_marginRight="30px"
        android:layout_height="90px"
        android:text="@string/confirm" />
</com.zhy.autolayout.AutoLinearLayout>
