<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:orientation="vertical" >
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="540px"
                android:layout_height="34px"
                android:textStyle="bold"
                android:layout_marginLeft="20px"
                android:textSize="32px"
                android:textColor="#38454f"
                android:layout_marginTop="48px"
                android:gravity="left"
                android:id="@+id/cust_name"
                />
            <ImageView
                android:layout_width="60px"
                android:layout_height="60px"
                android:layout_marginLeft="85px"
                android:layout_marginTop="29px"
                android:id="@+id/isSee"
                android:background="@drawable/viewed"/>
            </com.zhy.autolayout.AutoLinearLayout>


        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="84px"
                android:layout_height="30px"
                android:textStyle="bold"
                android:layout_marginLeft="21px"
                android:textSize="24px"
                android:textColor="#38454f"
                android:layout_marginTop="20px"
                android:gravity="left"
                android:text="@string/recognition"
                />
            <com.example.dm_skb.widget.RatingBar
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/sectorView"
                app:starSrc="@drawable/star_filled_icon_solid"
                app:starDst="@drawable/star_filled_icon"
                app:clickable="false"
                app:step="0.5"
                app:starNumber="5"
                android:layout_marginLeft="5px"
                android:layout_marginTop="20px"
                android:layout_width="163px"
                android:layout_height="24px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30px"
                android:layout_marginLeft="370px"
                android:layout_marginTop="15px"
                android:gravity="center"
                android:textSize="20px"
                android:textColor="#546979"
                android:id="@+id/distance"
                />
        </com.zhy.autolayout.AutoLinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_marginTop="12px"
            android:background="#cccccc"/>

    </com.zhy.autolayout.AutoLinearLayout>
</LinearLayout>